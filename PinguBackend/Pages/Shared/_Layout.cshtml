            </div>
            
            
            <div class="navlist-right">
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div id="gyroscopeDiv" class="gyrotoggler">
    <label id="gyroswitch" class="switch">
        <input type="checkbox" />
        <span class="slider round" onclick="getAccel()"></span>
    </label>
    <p class="toggle-text">Enable Gyroscope</p>
</div>
<div class="page-content">
    <div class="page-inset">
        <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    </div>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        <p class="card-text"> &copy; 2021 - pingu.onl - <a class="content-link" asp-area="" asp-page="/Privacy">Privacy</a></p>
    </div>
</footer>
    
    <!--NavBar Toggler for mobile devices-->
<script>
    function classToggle() {
        const navs = document.querySelectorAll('.navlist');
        const navcon = document.querySelectorAll('.card-container');
        const crd = document.querySelectorAll('.card');
  
        navs.forEach(nav => nav.classList.toggle('nav-toggle'));
        navcon.forEach(navc => navc.classList.toggle('navcon-toggle'));
        crd.forEach(cards => cards.classList.toggle('card-toggle'));
    }
    document.querySelector('.Navbar__Link-toggle')
        .addEventListener('click', classToggle);
</script>
    <!--Z-Index function for drop down menu -->
<script>
    var swt = document.getElementById("gyroswitch");
    var drop = document.getElementById("drop");
    drop.addEventListener('mouseenter',
        function () {
            swt.style.zIndex = -1;
        });
    drop.addEventListener('mouseleave',
        function () {
            swt.style.zIndex = 0;
        });
</script>

<script>

    var gyro = document.getElementById("gyroscopeDiv");

    function getAccel() {
        DeviceMotionEvent.requestPermission().then(response => {
            if (response == 'granted') {
                gyro.style.display = "none";
                console.log("accelerometer permission granted");
            }
        });
    }
</script>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script type="text/javascript" src="/js/vanilla-tilt.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>