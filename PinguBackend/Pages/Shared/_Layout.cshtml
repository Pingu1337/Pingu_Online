                    <ul id="navhead" class="navlist">
                        <li class="nav-li">
                            <a class="nav-link " asp-area="" asp-page="/About/Index">About</a>
                        </li>
                        <li class="nav-li">
                            <a class="nav-link " asp-area="" asp-page="/About/Contact">Contact</a>
                        </li>
                        <li class="nav-li">
                            <a class="nav-link " asp-area="" asp-page="/Styles/Index">Styles</a>
                        </li>
                        <li class="nav-li">
                            <a class="nav-link " asp-area="" asp-page="/WarcraftDB/Index">Warcraft Stocks</a>
                        </li>
                        <li class="nav-li">
                            <a class="nav-link " asp-area="" asp-page="/ChatApp/Chat">Chat</a>
