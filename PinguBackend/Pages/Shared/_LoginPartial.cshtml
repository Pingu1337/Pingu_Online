@using Microsoft.AspNetCore.Identity
@using xPingu.SharedLib.UserData.Data

@inject SignInManager<PinguUser> SignInManager
@inject UserManager<PinguUser> UserManager

<ul id="navhead" class="navlist-right">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-li-right">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
        </li>
        <li class="nav-li-right">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" class="logout-btn" type="submit" style="background: rgba(0, 0, 0, 0); border: none; outline: none;" >Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-li-right">
            <a class="nav-link " id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-li-right">
            <a class="nav-link " id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>

<style>

    .logout-btn {
        color: rgba(255, 255, 255, .3);
    }
    .logout-btn:hover {
        color: rgba(255, 255, 255, .7);
    }
</style>
