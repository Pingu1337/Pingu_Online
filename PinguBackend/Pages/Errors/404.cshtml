@page
@model PinguBackend.Pages.Errors._404Model
@{
}

<div id="errorpage">

    <img class="forofor" src="~/svg/404.svg" />
    <h1>Page Not Found</h1>

    <a asp-page="/Index"><img class="pingu1" src="~/img/3d/pingu-angle.png" /></a>


    <img class="pingu2" src="~/img/3d/icon2d.png" />
    <img class="pingu3" src="~/img/3d/pingu-morphed-straight.png" />
    <a asp-page="/Index"><div class="hover-div">  </div></a>

</div>

<script>

   img1 = document.querySelector(".pingu2");
   img2 = document.querySelector(".pingu3");
   hoverdiv = document.querySelector(".hover-div");

    hoverdiv.addEventListener("mouseenter", function() {

        img1.style.opacity = 0;
        img2.style.opacity = 1;
    });
   hoverdiv.addEventListener("mouseleave", function() {

       img1.style.opacity = 1;
       img2.style.opacity = 0;
   });


</script>



<style>

    #errorpage {
        display: flex;
        flex-direction: column;
        margin: auto;
        padding: 0px;
    }

    .forofor {
        width: 300px;
        margin-left: auto;
        margin-right: auto;
        filter: blur(0px) opacity(80%) drop-shadow(-10px 10px 5px rgba(0,0,0,0.2)) brightness(120%);

        -webkit-user-drag: none;
        user-select: none;
        -moz-user-select: none;
        -webkit-user-select: none;
        -ms-user-select: none;
    }
        #errorpage h1 {
            margin-top: 10px;
            text-align: center;
            color: rgba(255, 255, 255, .7);
        }

        #errorpage img {
            -webkit-user-drag: none;
            user-select: none;
            -moz-user-select: none;
            -webkit-user-select: none;
            -ms-user-select: none;
           
        }

        #errorpage .pingu1 {
            margin-top: 40px;
            margin-left: auto;
            margin-right: auto;
            transition: .5s;
            width: 260px;
            filter: blur(0px) opacity(20%) drop-shadow(-10px 10px 5px rgba(0,0,0,0.2)) brightness(120%);
            cursor: pointer;
            display: none;
        }
            #errorpage .pingu1:hover {
                filter: blur(0px) opacity(30%) drop-shadow(-10px 10px 5px rgba(0,0,0,0.2)) brightness(120%);
            }

    .hover-div {
        position: absolute;
        top: 52%;
        left: 45%;
        height: 120px;
        width: 190px;
        cursor: pointer;
    }

    #errorpage .pingu2 {
        position: absolute;
        width: 300px;
        filter: blur(0px) opacity(70%) brightness(100%);
        opacity: 1;
        transition: .8s;
        left: 42%;
        top: 44%;
        
    }
    #errorpage .pingu3 {
        opacity: 0;
        position: absolute;
        width: 300px;
        filter: blur(0px) opacity(30%) drop-shadow(-10px 10px 5px rgba(0,0,0,0)) brightness(120%);
        transition: .8s;
        left: 42%;
        top: 44%;
    }

    @@media screen and (max-width: 600px) {

        .hover-div {
            display: none;
        }
        .forofor {
            width: 100%;
        }
        #errorpage .pingu2 {
            display: none;
        } 
        #errorpage .pingu3 {
            display: none;
        } 
        #errorpage .pingu1 {
            display:inherit;
        }
    }

</style>